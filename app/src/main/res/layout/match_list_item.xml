<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"

    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="7dp" />

    <android.support.constraint.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="7dp" />

    <android.support.constraint.Guideline
        android:id="@+id/upper_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="15dp" />

    <android.support.constraint.Guideline
        android:id="@+id/bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="15dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Chewbacca"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toRightOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/upper_guideline"

        android:id="@+id/player_one_name_tv"
        android:layout_marginStart="16dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Princess Leia"
        app:layout_constraintRight_toLeftOf="@id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/upper_guideline"

        android:id="@+id/player_two_name_tv"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="98 - 99"
        android:layout_marginLeft="16dp"
        app:layout_constraintRight_toLeftOf="@id/player_two_name_tv"
        app:layout_constraintLeft_toRightOf="@id/player_one_name_tv"
        app:layout_constraintTop_toBottomOf="@id/upper_guideline"

        android:id="@+id/players_score_tv"
        android:layout_marginStart="16dp" />



</android.support.constraint.ConstraintLayout>